<h1>Sign up</h1>
<div>
	<%= form_for @user do |f| %>
		<%= render 'errors' %>

	  <%= f.label :username %>
		<%= f.text_field :username %>

		<%= f.label :email %>
		<%= f.email_field :email%>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>


		<%= f.submit "Sign up" %>
	<%end%>
</div>
